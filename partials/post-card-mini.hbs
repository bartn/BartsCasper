<article class="post-card {{post_class}} no-image post-card-large post-card-custom">

    <div class="post-card-content">

        <a class="post-card-content-link" href="{{url}}">

            <header class="post-card-header">
                {{#if primary_tag}}
                    {{#primary_tag}}
                    <div class="post-card-primary-tag">{{name}}</div>
                    {{/primary_tag}}
                {{/if}}
                <h2 class="post-card-title">{{title}}</h2>
            </header>
        </a>

        <footer class="post-card-meta">
            <div class="post-card-byline-content">
                <span class="post-card-byline-date"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
            </div>
        </footer>

    </div>{{!--/.post-card-content--}}

</article>
